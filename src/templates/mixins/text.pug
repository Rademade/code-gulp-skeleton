mixin text(bgcolor)
  tr
    td(width="100%" style="width: 100%")
      table(width="100%" style="width: 100%" bgcolor=bgcolor || 'transparent' border="0" cellspacing="0" cellpadding="0")
        tr
          +spacer(15, 'mobile-hide_mod')
          +spacer(15)
          block
          +spacer(15)
          +spacer(15, 'mobile-hide_mod')
